{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "baseUrl": "./scripts",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "../node_modules", "*/node_modules/**/*"]
}
